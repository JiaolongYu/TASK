<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/themecolor"
    android:orientation="vertical"
    tools:context="com.example.administrator.task.SingleCommonTask">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/ctaskname"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:textSize="40sp"
            android:textColor="@color/orange"
            android:text="Task Name" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_alignParentRight="true"
            tools:context=".MainActivity">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_weight="3"
                android:background="@color/themecolor"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/ic_edit_white_18dp"
                />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:paddingRight="20dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:text="Deadline:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ctaskdue"
            android:layout_marginBottom="20dip"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="due" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:paddingRight="20dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:text="Description:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ctaskdescript"
            android:layout_marginBottom="20dip"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="description" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dip"
            android:paddingRight="20dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:text="Create time:" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ctaskcreatetime"
            android:layout_marginBottom="20dip"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="create time" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dip"
        tools:context=".MainActivity">



        <ImageView
            android:id="@+id/show_comments"
            android:layout_width="35dp"
            android:layout_height="34dp"
            android:clickable="true"
            android:tag="plus"
            android:src="@drawable/ic_add_box_white_18dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:text="Comments" />

        <TextView
            android:id="@+id/comment_nums"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="20dp"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:text="(0)" />

        <ImageView
            android:id="@+id/add_comment"
            android:layout_width="35dp"
            android:layout_height="34dp"
            android:clickable="true"
            android:src="@drawable/ic_comment_white_18dp"
            />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:background="@color/light_grey"
        tools:context=".MainActivity"/>

    <LinearLayout
        android:id="@+id/comment_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/light_grey"
        tools:context=".MainActivity"/>

    <ListView
        android:id="@+id/comments"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>
