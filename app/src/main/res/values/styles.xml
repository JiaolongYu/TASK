<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:icon">@android:color/transparent</item>
    </style>


    <style name="AlertDialogCustom" parent="@android:style/Theme.Holo.Light.Dialog">

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">10sp</item>
        <!--<item name="android:background">#045864</item>-->
    </style>

    <style name="FullHeightDialog" parent="android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:layout_width">@dimen/activity_horizontal_margin</item>
        <item name="android:windowNoTitle">true</item>
    </style>


</resources>